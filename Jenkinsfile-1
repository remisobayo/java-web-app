pipeline {
  //agent { label 'linux' }
  agent any
  options {
    buildDiscarder(logRotator(numToKeepStr: '5'))
  }
  stages {
    stage('Build') {
      steps {
        sh 'docker build -t remisobayo/java-web-app:latest .'
      }
    }
    stage('Scan') {
      steps {
        sh 'trivy image remisobayo/java-web-app:latest'
      }
    }
  }
}
